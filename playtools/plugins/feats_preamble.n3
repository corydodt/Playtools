@prefix : <http://thesoftworld.com/2007/feat.n3#> .
@prefix c: <http://thesoftworld.com/2007/characteristic.n3#> .
@prefix p: <http://thesoftworld.com/2007/property.n3#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<> rdfs:title "All d20 SRD Feats" .


:alignedAttack p:choice [ rdfs:range c:AlignmentAtom ] .
:devastatingCritical p:choice [ rdfs:range c:Weapon ] .
:energyResistance p:choice [ rdfs:range c:Energy ] .
:energySubstitution p:choice [ rdfs:range c:Energy ] .
:improvedAlignmentBasedCasting p:choice [ rdfs:range c:AlignmentAtom ] .
:epicSkillFocus p:choice [ rdfs:range c:Skill ] .
:epicWeaponFocus p:choice [ rdfs:range c:Weapon ] .
:epicWeaponSpecialization p:choice [ rdfs:range c:Weapon ] .
:efficientItemCreation p:choice [ rdfs:range c:ItemCreationFeat ] .
:improvedCritical p:choice [ rdfs:range c:Weapon ] .
:powerCritical p:choice [ rdfs:range c:Weapon ] .
:overwhelmingCritical p:choice [ rdfs:range c:Weapon ] .
:exoticWeaponProficiency p:choice [ rdfs:range c:ExoticWeapon ] .
:martialWeaponProficiency p:choice [ rdfs:range c:MartialWeapon ] .
:weaponFocus p:choice [ rdfs:range c:Weapon ] .
:skillFocus p:choice [ rdfs:range c:Skill ] .
:epicExpandedKnowledge p:choice [ rdfs:range c:PsionicPower ] .
:expandedKnowledge p:choice [ rdfs:range c:PsionicPower ] .
:spellFocus p:choice [ rdfs:range c:SpellSchool ] .
:epicSpellFocus p:choice [ rdfs:range c:SpellSchool ] .
:rapidReload p:choice [ rdfs:range c:Crossbow ] .
:instantReload p:choice [ rdfs:range c:Crossbow ] .
:weaponSpecialization p:choice [ rdfs:range c:Weapon ] .
:additionalMagicItemSpace p:choice [ rdfs:range c:WornItemLocation ] .
:permanentEmanation p:choice [ rdfs:range ( c:AreaEffectSpell
                                            c:SpellTargetYou ) ] .
:penetrateDamageReduction p:choice [ rdfs:range c:MagicItemMaterial ] .
:bonusDomain 
    p:choice [ rdfs:range c:SpellDomain ];
    p:choiceFilter c:ReferentCharacter!p:deity!p:domain;
.
:spontaneousDomainAccess 
    p:choice [ rdfs:range c:SpellDomain ];
    p:choiceFilter c:ReferentCharacter!p:domain;
.
:spontaneousSpell 
    p:choice [ rdfs:range c:Spell ];
    p:choiceFilter c:ReferentCharacter!p:knownSpells;
.
:greaterSpellFocus p:choice [ rdfs:range c:SpellSchool ] .
:greaterWeaponFocus p:choice [ rdfs:range c:Weapon ] .
:greaterWeaponSpecialization p:choice [ rdfs:range c:Weapon ] .
:familiarSpell 
    p:choice [ rdfs:range c:ArcaneSpell ];
    p:choiceFilter c:ReferentCharacter!p:knownSpells;
    p:choiceComment "Implementation: maximum spell level should be limited to 8";
.
:spellKnowledge p:choice [ rdfs:range c:Spell ], [ rdfs:range c:Spell ].
:powerKnowledge 
    p:choice [ rdfs:range c:PsionicPower ], [ rdfs:range c:PsionicPower ];
    p:choiceComment """Implementation: Maximum level is the highest level 
of power the ReferentCharacter can manifest""";
.
:psicrystalPower 
    p:choice [ rdfs:range c:PsionicPower ];
    p:choiceFilter c:ReferentCharacter!p:knownPowers;
    p:choiceComment "Implementation: Filter by maximum power level 8";
.
:improvedNaturalAttack 
    p:choice [ rdfs:range c:NaturalWeapon ];
    p:choiceFilter c:ReferentCharacter!p:attack;
.
:improvedFamiliar p:choice [ rdfs:range c:Familiar ] .
:abilityFocus 
    p:choice [ rdfs:range c:AttackOption ];
    p:choiceFilter c:ReferentCharacter!p:attack;
.
:empowerSpellLikeAbility 
    p:choice [ rdfs:range c:SpellLikeAbility ];
    p:choiceFilter c:ReferentCharacter!p:specialAbility;
.
:quickenSpellLikeAbility 
    p:choice [ rdfs:range c:SpellLikeAbility ];
    p:choiceFilter c:ReferentCharacter!p:specialAbility;
.
:tenaciousMagic
    p:choice [ rdfs:range c:SpellOrSpellLikeAbility ];
    p:choiceComment 
        "Implementation: only spells or abilities the character possesses.";
.
:spellStowaway 
    p:choice [ rdfs:range c:SpellOrSpellLikeAbility ];
    p:choiceComment 
        "Implementation: only spells or abilities the character possesses.";
.
:improvedSpellCapacity p:choice [ rdfs:range c:SpellLevel ];
    p:choiceComment 
      "Implementation: maximum level is character's maximum castable level + 1";
.
:spellMastery 
    p:choice [ rdfs:range c:Spell ];
    p:choiceRepeat c:ReferentCharacter!p:abilityScore!p:int;
.
