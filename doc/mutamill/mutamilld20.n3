@prefix  :      <http://goonmill.org/2009/mutamilld20.n3#> .
@prefix  mut:   <http://goonmill.org/2009/mutamill.n3#> .
@prefix  rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix  rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix  owl:   <http://www.w3.org/2002/07/owl#> .
@prefix  d:     <http://goonmill.org/2007/dice.n3#> .
@prefix  c:     <http://goonmill.org/2007/characteristic.n3#> .

<> rdfs:comment "The D20 chargen, defined for Mutamill.".

:rollMethod a mut:Question;
    rdfs:label "How do you wish to roll stats?";
    owl:allValuesFrom d:RollMethod;
    mut:answerType mut:choiceType;
.

:str a mut:Question;
    rdfs:label "Strength:";
    mut:answerType mut:randomType;
    mut:answerExpression :rollMethod;
    rdfs:comment "FIXME Should use mut:numberType when a d:PointBuyRollMethod is chosen";
.

:dex a mut:Question;
    rdfs:label "Dexterity:";
    mut:answerType mut:randomType;
    mut:answerExpression :rollMethod;
.

:con a mut:Question;
    rdfs:label "Constitution:";
    mut:answerType mut:randomType;
    mut:answerExpression :rollMethod;
.

:int a mut:Question;
    rdfs:label "Intelligence:";
    mut:answerType mut:randomType;
    mut:answerExpression :rollMethod;
.

:wis a mut:Question;
    rdfs:label "Wisdom:";
    mut:answerType mut:randomType;
    mut:answerExpression :rollMethod;
.

:cha a mut:Question;
    rdfs:label "Charisma:";
    mut:answerType mut:randomType;
    mut:answerExpression :rollMethod;
.

:race a mut:Question;
    rdfs:label "Choose your race";
    mut:answerType mut:radioType;
    owl:allValuesFrom c:Race;
.

:alignment a mut:Question;
    rdfs:label "Choose your alignment";
    mut:answerType mut:radioType;
    owl:allValuesFrom c:AlignmentTrue;
.

#
