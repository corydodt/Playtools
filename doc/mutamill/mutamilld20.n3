#
#
#

:stats a mut:Section;
    :questions (:rollMethod :str :dex :con :int :wis :cha);
    rdfs:label "Roll Stats";
.

:race a mut:Section;
    :questions (:race);
    rdfs:label "Choose Race";
.

:alignment a mut:Section;
    :questions (:alignment);
    rdfs:label "Choose Alignment";
.

:appearance a mut:Section.

:classLevels a mut:Section.

:levelChoices a mut:Section.

:classChoices a mut:Section.

:skills a mut:Section.

:feats a mut:Section.

:equipment a mut:Section.

:story a mut:Section.


